generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model GasCache {
  id          Int      @id @default(autoincrement())
  walletAddress String  // 钱包地址
  date        String  // 日期，YYYY-MM-DD 格式
  txCount     Int     // 交易笔数
  totalGasFee String  // 消耗的 Gas 总和，单位 SOL
  totalGasUsd Float   // 消耗的 Gas 总和，单位 USD
  updatedAt   DateTime @updatedAt

  @@unique([walletAddress, date])
  @@map("GasCache")
}
